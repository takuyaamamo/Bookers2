<section class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class='row'>

      <div class='col-xs-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr><img class="attachment user profile_image" src="/attachments/fef8a78e33cc23428799070a1e90807ca836d6d5/store/fill/100/100/6c4a9b64ced7b7311302ec2d0431c9e50b15f01e9412d435e439b3f05f0b/profile_image" alt="Profile image" /></tr>
          <tr>
            <th>name</th>
            <th>
              <%= @user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%=  %>こんにちは</th>
          </tr>
        </table>

        <!-- 編集ボタン -->
        <div class='row'>
          <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_3337" href="<%= edit_user_path(current_user.id)  %>"></a>
