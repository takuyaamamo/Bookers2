<div class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <p>入力した内容にエラーが<%= @user.errors.count %>件あります</p>
      <ul>
        <% @user.errors.full_messages.each do |user_error| %>
          <li><%= user_error %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_for(@user, html: {class: 'edit_user'}) do |f| %>
    <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name, class:"name", id:"user_name" %>
    </div>
    <div class="field">
      <label for="user_image">Image</label>
      <%= f.attachment_field :image, class:"user_image", id:"user_image" %>
    </div>
    <div class="field">
      <label for="user_introduction">Introduction</label>
      <%= f.text_area :introduction, class:"introduction", id:"user_introduction" %>
    </div>
    <div class="actions">
      <%= f.submit '編集完了' %>
    </div>
    <% end %>

  </div>
</div>
