<%= render 'shared/mypage' %>
<%= render 'shared/new' %>
<!-- 右側部分は自分が投稿した本の一覧 -->
        <div class='col-xs-9'>
          <h2>Books</h2>

          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>

                <% @users.each do |user| %>

                <tr>
                  <td>
                    <%= link_to user_path(user.id) do %>
                    <%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg',:class => "attachment user profile_image", fallback: "no_image.jpg",size: '50x50', :alt => "Profile image" %>
                    <% end %>
                  </td>
                  <td>
                    <%= user.name %>
                  </td>
                  <td>
                    <%= link_to user_path(user.id), {class: "user_#{user.id}", id: "new_book"} do %>
                    show
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

    </div>
  </div>
</section>
