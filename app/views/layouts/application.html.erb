<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
        <header>
          <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Bookers</a>
              </div>

              <div class="collapse navbar-collapse navbar-right" id="navbarEexample7">
                <ul class="nav navbar-nav">
                  <li><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a></li>
                  <li><a href="/"><span class="glyphicon glyphicon-link" aria-hidden="true"></span> About</a></li>
                  <li>
                    <%= link_to user_path(current_user) do %>
                      <span class="glyphicon glyphicon-user users" aria-hidden="true"></span> Users
                    <% end %>
                  </li>
                  <li>
                    <%= link_to books_path do %>
                      <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
                    <% end %>
                  </li>
                  <li><a href="/users/sign_up"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> sign up</a></li>
                  <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> log in</a></li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> log out
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        </header>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
