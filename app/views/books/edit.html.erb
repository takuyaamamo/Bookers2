<div class='col-md-6 col-md-offset-3'>
	<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
	<% end %>
		<h1>Editing Book</h1>
		<% if @book.errors.any? %>
	    <p>入力した内容にエラーが<%= @book.errors.count %>件あります</p>
	    <ul>
	      <% @book.errors.full_messages.each do |book_error| %>
	        <li><%= book_error %></li>
	      <% end %>
	    </ul>
	  <% end %>
    <%= form_for (@book) do |f| %>

		  <div class="field row">
		    <label for="title">Title</label>
		    <%= f.text_field :book_title, class: "book_title" %>
		  </div>
		  <div class="field row">
		    <label for="body">Opinion</label>
		    <%= f.text_area :book_body, class: "book_body" %>
		  </div>
		  <div class="actions row">
				<%= f.submit '編集完了' %>
		  </div>

	<% end %>
		<%= link_to "Show", book_path(@book.id), {class: "books"}  %> |
		<a class="back" href="/books">Back</a>
    </div>
    <div class='col-md-3'></div>
</div>
      </div>
    </div>
