<section class='body'>
  <div class='container'>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class='row'>

        <!-- 部分テンプレート -->
        <%= render 'shared/mypage' %>
        <%= render 'shared/new' %>
        <div class='col-xs-9'>
          <h2>Books</h2>

          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @user_books.each do |user_book| %>
              <% books_user = @users.find(user_book.user_id) %>
              <tr>
                <td>
                  <%= link_to user_path(books_user.id) do %>
                  <%= attachment_image_tag books_user, :image, :fill, 50, 50, format: 'jpeg',:class => "attachment user profile_image", :alt => "Profile image" %>
                  <%= books_user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(user_book.id), html: {class: "book_5914", id: "new_book"} do %>
                  <%= user_book.book_title %>
                  <% end %>
                </td>
                <td>
                  <%= user_book.book_body %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</section>
